<!DOCTYPE html>
<html>
  <head>
    <title>Wisowls</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    
    <%= yield %>
    <header class="navbar navbar-top">
        <nav>
          <ul class="nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to "Home",  home_path, class:"font-valera header-tab" %></li>
              <li><%= link_to "Messages", conversations_path(current_user), class:"font-valera header-tab" %></li>
              <li class="dropdown">
              <a href="#" class="font-valera dropdown-toggle header-tab" data-toggle="dropdown">
                My Account </b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Profile", current_user %></li>
                <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
              </li>
            <% end %>
          </ul>
        </nav>
    </header>
  </body>
</html>
