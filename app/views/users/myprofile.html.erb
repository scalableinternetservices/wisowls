<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Meet-Pup | Register</title>
    <link href="https://fonts.googleapis.com/css?family=Satisfy|Varela+Round&display=swap" rel="stylesheet">
  </head>
  <script type='text/javascript'>
    function toggle_button(name) {
      if ($('.tag_btn_' + name).css('color') == "rgb(153, 153, 153)") {
        $('.tag_btn_' + name).css('color', '#e6a53e').css('border-color', '#fcc369');
        $('.tag' + name + '_check').prop("checked", true);
      }
      else {
        $('.tag_btn_' + name).css('color', '#999999').css('border-color', '#dddddd');
        $('.tag' + name + '_check').prop("checked", false);
      }
    }
  
  </script>
  <body class="background-blank">
   <div class="h-100 row my_profile_row">
      <div class="font-satisfy" id="register-title"> Meet-Pup </div>
      
      <div class="col">
        <div class="register-container-profile">
        </div>
      </div>

      <div class="col">
        <div class="register-container-profile">
          <%= form_with(model: @user, local: true) do |f| %>
            <%= f.label :profile %>
            <div class="upload-profile-pic"></div>
            
            <div class="image-upload">
               <label for="file-input" class="font-valera img-upload-btn">
                 UPLOAD
               </label>
            
               <%= f.file_field :image_url, id: "file-input", accept: 'image/png,image/jpeg'%>
            </div>

        </div>
      </div>
      
      <div class="col">
        <div class="register-container-profile">
      
            <%= f.label :name %>
            <%= f.text_field :dog_name, class: 'form-control field-input' %>
         
            <%= f.label :age %>
            <%= f.number_field :dog_age, class: 'form-control field-input' %>
            
            <%= f.label :gender %>
            <%= f.select :dog_gender, options_for_select([["Select One", ""], "Male" , "Female"]), {}, { :class => 'field-input' } %>
      
            <%= f.label :breed %>
            <%= f.text_field :dog_breed, class: 'form-control field-input' %>
    
            <%= f.label :weight %>
            <%= f.select :dog_weight, options_for_select([["Select One", ""], "Less than 25 lbs" , "Between 25 lbs & 55 lbs", "Between 55 lbs & 100 lbs", "More than 100 lbs"]), {}, { :class => 'field-input' } %>
      
            <%= f.check_box :tag1, class: 'tag1_check hidden_checkbox' %>
            <%= f.check_box :tag2, class: 'tag2_check hidden_checkbox' %>
            <%= f.check_box :tag3, class: 'tag3_check hidden_checkbox' %>
            <%= f.check_box :tag4, class: 'tag4_check hidden_checkbox' %>
            <%= f.check_box :tag5, class: 'tag5_check hidden_checkbox' %>
            <%= f.check_box :tag6, class: 'tag6_check hidden_checkbox' %>
            <%= f.check_box :tag7, class: 'tag7_check hidden_checkbox' %>
            <%= f.check_box :tag8, class: 'tag8_check hidden_checkbox' %>
            <%= f.check_box :tag9, class: 'tag9_check hidden_checkbox' %>
            <%= f.check_box :tag10, class: 'tag10_check hidden_checkbox' %>
            <%= f.check_box :tag11, class: 'tag11_check hidden_checkbox' %>
            <%= f.check_box :taga, class: 'taga_check hidden_checkbox' %>
            <%= f.check_box :tagb, class: 'tagb_check hidden_checkbox' %>
            <%= f.check_box :tagc, class: 'tagc_check hidden_checkbox' %>
            <%= f.check_box :tagd, class: 'tagd_check hidden_checkbox' %>
            <%= f.check_box :tage, class: 'tage_check hidden_checkbox' %>
            <%= f.check_box :tagf, class: 'tagf_check hidden_checkbox' %>

            <br>
            <%= f.label :traits, "I am..." %>
            <br>
            <button type="button" onclick="toggle_button('1')" class='font-valera tag-button tag_btn_1'>Playful</button>
            <button type="button" onclick="toggle_button('2')" class='font-valera tag-button tag_btn_2'>Energetic</button>
            <button type="button" onclick="toggle_button('3')" class='font-valera tag-button tag_btn_3'>Friendly</button>
            <button type="button" onclick="toggle_button('4')" class='font-valera tag-button tag_btn_4'>Calm</button>
            <button type="button" onclick="toggle_button('5')" class='font-valera tag-button tag_btn_5'>Affectionate</button>
            <button type="button" onclick="toggle_button('6')" class='font-valera tag-button tag_btn_6'>Cuddly</button>
            <button type="button" onclick="toggle_button('7')" class='font-valera tag-button tag_btn_7'>Intelligent</button>
            <button type="button" onclick="toggle_button('8')" class='font-valera tag-button tag_btn_8'>Curious</button>
            <button type="button" onclick="toggle_button('9')" class='font-valera tag-button tag_btn_9'>Sassy</button>
            <button type="button" onclick="toggle_button('10')" class='font-valera tag-button tag_btn_10'>Child Friendly</button>
            <button type="button" onclick="toggle_button('11')" class='font-valera tag-button tag_btn_11'>Cat Friendly</button>

            <br> <br> 
            
            <%= f.label :lookingfor, "Looking for..." %>
            <br>
            <button type="button" onclick="toggle_button('a')" class='font-valera tag-button tag_btn_a'>Small Dogs</button>
            <button type="button" onclick="toggle_button('b')" class='font-valera tag-button tag_btn_b'>Big Dogs</button>
            <button type="button" onclick="toggle_button('c')" class='font-valera tag-button tag_btn_c'>Puppies</button>
            <button type="button" onclick="toggle_button('d')" class='font-valera tag-button tag_btn_d'>A Soul Mate</button>
            <button type="button" onclick="toggle_button('e')" class='font-valera tag-button tag_btn_e'>Younger Dogs</button>
            <button type="button" onclick="toggle_button('f')" class='font-valera tag-button tag_btn_f'>Older Dogs</button>

            <br> <br> <br>

          <%= f.submit "Save", class: "font-valera field-button", id: "profile_form_submit" %>
          <% end %>
          
        </div>
      </div>
      
      <div class="col">
        <div class="register-container-profile">
        </div>
      </div>
      
    </div>
  </body>
</html>