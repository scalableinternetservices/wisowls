<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <%= form_with(url: profile_path, scope: :user, local: true, method: "get") do |f| %>
          <%= f.submit "My Profile", class: "font-valera field-button" %>
        <% end %>
        
        <%= form_with(url: logout_path, scope: :session, local: true, method: "delete") do |f| %>
          <%= f.submit "Log Out", class: "font-valera field-button" %>
        <% end %>
    </section>
  </aside>
</div>